rules_version = '2';

// LogSystem Firestore Security Rules
// These rules lock down ALL collections â€” only the server-side Admin SDK can read/write.
// The Dashboard backend uses a Service Account, which bypasses these rules.
// These rules protect against direct client access (e.g., if someone gets the project ID).

service cloud.firestore {
  match /databases/{database}/documents {

    // Default: deny all client-side access
    match /{document=**} {
      allow read, write: if false;
    }

    // If you later add a web client that reads directly from Firestore,
    // you can add authenticated rules like:
    //
    // match /devices/{deviceId} {
    //   allow read: if request.auth != null && request.auth.token.admin == true;
    // }
  }
}
